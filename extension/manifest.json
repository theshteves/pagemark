{
    "manifest_version": 2,

    "name": "pagemark",
    "author": "Steven Kneiser",
    "description": "Chrome extension for bookmarking your spot on webpages",
    "version": "0.0.1",
    "background": {
	"scripts": ["jquery-2.1.3.min.js"],
	"persistent": false
    },
    "browser_action": {
	"default_icon": "favicon.png",
	"default_popup": "popup.html"
    },
    "permissions": [
	"activeTab",
	"background",
	"https://ajax.googleapis.com/",
	"storage",
	"tabs"
    ]
}
